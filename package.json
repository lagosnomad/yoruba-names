{
    "name": "yoruba-names",
    "version": "0.0.1-development",
    "description": "Get random yoruba names",
    "main": "dist/index.js",
    "scripts": {
        "commit": "git-cz",
        "check-coverage": "nyc check-coverage --statements 100 --branches 100 --functions 100 --lines 100",
        "report-coverage": "cat coverage/lcov.info | codecov",
        "watch:test": "npm test -- -w",
        "test": "mocha tests/index.test.js --compilers js:babel-register",
        "cover": "nyc npm test",
        "prebuild": "rimraf dist",
        "build": "npm-run-all --parallel build:*",
        "build:main": "babel --copy-files --out-dir dist src",
        "build:umd": "webpack --output-filename index.umd.js",
        "build:umd.min": "webpack --output-filename index.umd.min.js -p",
        "semantic-release": "semantic-release pre && npm publish && semantic-release post"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/mczlatan/yoruba-names.git"
    },
    "keywords": [
        "random",
        "yoruba",
        "names"
    ],
    "files": [
        "dist/",
        "README.nd"
    ],
    "author": "mczlatan <bournethesonofthegun@gmail.com> (https://mczlatan.github.io/)",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/mczlatan/yoruba-names/issues"
    },
    "homepage": "https://github.com/mczlatan/yoruba-names#readme",
    "dependencies": {
        "ghooks": "2.0.0",
        "istanbul": "0.4.5",
        "unique-random-array": "1.0.0"
    },
    "devDependencies": {
        "babel-cli": "^6.26.0",
        "babel-loader": "^7.1.2",
        "babel-preset-es2015": "^6.24.1",
        "babel-preset-stage-2": "^6.24.1",
        "babel-register": "^6.26.0",
        "chai": "4.1.2",
        "codecov.io": "0.1.6",
        "commitizen": "^2.9.6",
        "cz-conventional-changelog": "^2.0.0",
        "json-loader": "^0.5.7",
        "mocha": "4.0.1",
        "npm-run-all": "^4.1.1",
        "nyc": "^11.2.1",
        "rimraf": "^2.6.2",
        "semantic-release": "^17.2.3",
        "webpack": "^3.6.0"
    },
    "czConfig": {
        "path": "node_modules/cz-conventional-changelog"
    },
    "config": {
        "ghooks": {
            "pre-commit": "npm run cover && npm run check-coverage"
        }
    },
    "babel": {
        "presets": [
            "es2015",
            "stage-2"
        ]
    }
}